manifest {
	name = 'LONGQC'
	author = 'Guillermo A.R. Piccoli'
	homePage = 'https://www.epicsolutions.cl'
	description = 'Pipeline for HiFi Genetic Analises'
	version = '1.0.0'
}

executor{
    jobName = { "$task.tag" }
}

params {
    outdir = "output"
	o ="$outdir/seq_quality"
	i = "4G"
	x = "pb-hifi"
	s = "4W"
	t = "false"
	n = 1
	c = "grpiccoli/longqc:latest"
	o_i="$params.outdir/indexes"
}

process {
	memory = 24.GB
	cpus = 12
}

profiles {
    rapoi {
		process {
			executor = 'slurm'
			time = '1h'
			queue = 'quicktest'
		}
	}
}